<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Games Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Games Title"
                    name="Name" 
                    value="<%= Games.Name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="PlatformTextField">Platform</label>
                    <input type="text" class="form-control"
                    id="PlatformTextField"
                    placeholder="Enter the Games's Platform"
                    name="Platform" 
                    value="<%= Games.Platform %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="YearTextField">Year</label>
                    <input type="text" class="form-control"
                    id="YearTextField"
                    placeholder="Enter the Year of Publication"
                    name="Year" 
                    value="<%= Games.Year %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the Games"
                    name="Description" 
                    required>
                    <%= Games.Description %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Games's Price"
                    name="Price" 
                    value="<%= Games.Price %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/Gameslist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>